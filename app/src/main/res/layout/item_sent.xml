<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_user_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textStyle="normal|bold"
        />

    <TextView
        android:id="@+id/message_time_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/message_text_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_user_sent"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:fontFamily="@font/pixel_font"
        android:textColor="@color/black"
        android:padding="10dp"
        app:angle="8dp"
        app:arrowWidth="8dp"
        app:arrowHeight="10dp"
        app:arrowPosition="10dp"
        app:arrowLocation="right"
        app:bubbleColor="#f765b8"
        app:arrowCenter="true"
        android:layout_alignParentRight="true"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        android:textSize="18sp" />

</RelativeLayout>